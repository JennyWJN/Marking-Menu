{
  "root": true,
  "env": {
    "browser": true
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "valid-jsdoc": "error",
    "prettier/prettier": "error"
  },
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": [ "build-config/**" ],
      "rules": {
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
      }
    }
  ]
}
